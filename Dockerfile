        && npm install -g body@"4.4.2"  \
        && npm install -g faye@"1.0.1"  \
        && npm install -g forever@"0.11.1" \
        && npm install -g line-reader@"0.2.3"  \
        && npm install -g lodash@"2.4.1"  \
        && npm install -g lru-cache@"2.5.0"  \
        && npm install -g mocha@"1.20.1"  \
        && npm install -g mysql@"2.5.0"  \
        && npm install -g optimist@"0.6.1"  \
        && npm install -g should@"4.0.4"  \
        && npm install -g timezone-js@"0.4.11" \
        && npm install -g uuid@"1.4.1"  \
        && npm install -g winston@"0.7.3"   \
        && npm install -g winstond@"0.0.2"  

